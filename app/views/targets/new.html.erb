<h2>パラメータ設定</h2>

<%= form_for(@target, url: targets_path(@target), method: :post) do |f| %>
  <%= flash[:error] %><br />
  <%= render "shared/error_messages", model: f.object %><br />
  <div>
    <%= f.label :content, "達成目標を入力しよう" %><br />
    <%= f.text_area :content, placeholder: "3ヶ月で体重を〇〇kgから・・kgに落とす！、YY/MM/DDに受ける予定の〇〇試験に合格する！、など" %>
  </div>
  <div>
    <%= f.label :name, "パラメータ名をつけよう" %><br />
    <%= f.text_field :name, placeholder: "美しさ、筋力、英語力、数学力など"%>
  </div>
  <%= f.submit "登録" %>
<% end %>
<%= link_to "戻る", root_path %><br />